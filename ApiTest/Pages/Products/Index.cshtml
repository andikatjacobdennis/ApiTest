@page
@model ApiTest.Pages.Products.IndexModel

@{
    Layout = "_Layout";
}

<h1>Products</h1>

<form method="get" style="display: flex; gap: 1rem; align-items: center;">
        <label for="pageSize" class="form-label">Page Size:</label>
        <select id="pageSize" name="pageSize" class="form-select" asp-for="PageSize">
            <option value="10" @(Model.PageSize == 10 ? "selected" : "")>10</option>
            <option value="25" @(Model.PageSize == 25 ? "selected" : "")>25</option>
            <option value="50" @(Model.PageSize == 50 ? "selected" : "")>50</option>
        </select>

        <label for="updatedAfter" class="form-label">Updated After:</label>
        <input type="datetime-local"
               id="updatedAfter"
               name="updatedAfter"
               class="form-control"
               style="width: 150px;"
               value="@Model.UpdatedAfter?.ToString("yyyy-MM-ddTHH:mm")" />

    <button type="submit" class="btn btn-primary">Apply</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Created</th>
            <th>Last Updated</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Products != null && Model.Products.Any())
        {
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                    <td>@product.Created</td>
                    <td>@product.LastUpdated</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No products found.</td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        <!-- Previous Button -->
        <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
            <a class="page-link" href="/Products?pageNumber=@(Model.PageNumber - 1)&pageSize=@Model.PageSize">Previous</a>
        </li>

        <!-- Page Numbers -->
        <li class="page-item disabled"><span class="page-link">Page @Model.PageNumber</span></li>

        <!-- Next Button -->
        <li class="page-item @(Model.HasMorePages ? "" : "disabled")">
            <a class="page-link" href="/Products?pageNumber=@(Model.PageNumber + 1)&pageSize=@Model.PageSize">Next</a>
        </li>
    </ul>
</nav>
